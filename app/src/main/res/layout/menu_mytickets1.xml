<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_marginBottom="8dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:background="@android:color/black">


        <Button
            android:id="@+id/btnReservation"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/ticketGodzina"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="260dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="32dp"
            android:layout_toEndOf="@+id/btnBuy"
            android:background="@color/cardview_dark_background"
            android:text="Cancel your reservation"
            android:textColor="#72BE42" />

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/btnReservation"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btnReservation"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="0dp"
            android:background="@color/cardview_dark_background"
            android:text="Buy a ticket "
            android:textColor="#72BE42" />

        <TextView
            android:id="@+id/ticketMiejsce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ticketTytul"
            android:background="@color/cardview_dark_background"
            android:gravity="center"
            android:text="Pleace"
            android:textColor="#72BE42"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ticketTytul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/cardview_dark_background"
            android:gravity="center"
            android:text="Title"
            android:textColor="#72BE42"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ticketData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ticketMiejsce"
            android:background="@color/cardview_dark_background"
            android:gravity="center"
            android:text="Date"
            android:textColor="#72BE42"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ticketGodzina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ticketData"
            android:background="@color/cardview_dark_background"
            android:gravity="center"
            android:text="Time"
            android:textColor="#72BE42"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ticketStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ticketData"
            android:background="@color/cardview_dark_background"
            android:gravity="center"
            android:text=""
            android:textColor="#72BE42"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="185dp"
            android:layout_height="138dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="23dp"
            app:srcCompat="@drawable/qr" />




    </RelativeLayout>

</android.support.v7.widget.CardView>